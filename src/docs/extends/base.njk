{% set templates_path = "../templates/" %}

<!doctype html>
<html class="no-js" lang="fr">

<head>
	<meta charset="utf-8" />
	<meta name="author" content="Jund Thomas" />
	<meta name="copyright" content="Â© sacripant.fr" />
	<meta name="description" content="Amorce documentation: a web starter kit" />
	
	<!-- Viewport for Iphone ipad -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<!-- IE edge -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title>
		{% block title%}{% endblock %}	
		Amorce, web starter kit
	</title>
	
<!-- affichage favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />

<!-- CSS -->
	<!-- if icons -->
	<!-- <link rel="stylesheet" href="../templates/css/{{ name }}-icons.css" media="all" /> -->
	<!-- project CSS -->
	<link rel="stylesheet" href="{{ templates_path }}css/project.css" media="all" />
	<!-- only for this doc -->
	<link rel="stylesheet" href="assets/prism.css" type="text/css" media="screen" />
	<link rel="stylesheet" href="assets/doc.css" type="text/css" media="screen" />

	{% block additionalCSS %}{% endblock %}


</head>


<body>
	<div class="docs-wrapper">

		<input type="checkbox" class="ckb__toggle-header hidden" id="ckb__toggle-header" />
		<label class="btn__toggle-header" for="ckb__toggle-header" role="button" aria-label="Open close Table of content">
			<abbr title="Table of content">TOC</abbr>
		</label>
		
		<header role="banner" class="docs-header small">
			{% block header_title %}
			<h1 class="h6">
				{% include 'docs/includes/logo-amorce.svg' %} <br/>
				<span class="small">v. {{ amorce_version }}</span>
				<!-- Code Style Guide -->
			</h1>
			{% endblock %}
			<nav role="navigation" class="docs-toc">
				<h1 class="h6">
					<abbr title="Table of content">TOC</abbr>
				</h1>
				<ul>
					<li><a class="a__toc" href="index.doc.html">Introduction</a></li>
					<li><a class="a__toc" href="naming-convention.doc.html">Nomenclature</a></li>
				</ul>

				<h6 class="h__docs-toc">Config</h6>
				<ul>
					<li><a class="a__toc" href="colors.doc.html">Colors</a></li>
					<li><a class="a__toc" href="sizes.doc.html">Sizes</a></li>
					<li><a class="a__toc" href="breakpoints.doc.html">Breakpoints</a></li>
				</ul>
				

				<h6 class="h__docs-toc">Bases</h6>
				<ul>
					<li><a class="a__toc" href="typography.doc.html">Typography</a></li>
					<li><a class="a__toc" href="forms.doc.html">Forms</a></li>
				</ul>

				<h6 class="h__docs-toc">Layout</h6>
				<ul>
					<li><a class="a__toc" href="flex-utils.doc.html">Flex utils</a></li>
					<li><a class="a__toc" href="grids-intro.doc.html">Grids intro</a></li>
					<li><a class="a__toc" href="flex-grid.doc.html">Flex grid</a></li>
					<li><a class="a__toc" href="float-grid.doc.html">Float grid</a></li>
					<li><a class="a__toc" href="table-grid.doc.html">Table grid</a></li>
					<li><a class="a__toc" href="inline-grid.doc.html">Inline grid</a></li>
				</ul>

				<h6 class="h__docs-toc">Utils</h6>
				<ul>
					<li><a class="a__toc" href="hidden.doc.html">Hidden</a></li>
					<li><a class="a__toc" href="block-link.doc.html">Block link</a></li>
					<li><a class="a__toc" href="social-colors.doc.html">Social colors</a></li>
					<li><a class="a__toc" href="icons.doc.html">SVG Icons</a></li>
					<li><a class="a__toc" href="placeholder-imgs.doc.html">Placeholder images</a></li>
				</ul>

				<h6 class="h__docs-toc">Composants</h6>
				<ul>
					<li><a class="a__toc" href="buttons.doc.html">Buttons</a></li>
					<li><a class="a__toc" href="spinner.doc.html">Spinner</a></li>
				</ul>
			</nav>
		</header>
	
		<main class="docs-main" role="main">

			{% block main %}{% endblock %}

		</main>
		
	</div><!-- #wrapper -->


<!-- Javascript bottom -->
	<script src="assets/tinycolor-min.js"></script>
	<script src="assets/prism.js" data-manual></script>
	<script src="assets/doc.js"></script>

	{% block additionalJS %}{% endblock %}
</body>

</html>
